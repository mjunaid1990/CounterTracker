modules = ["flutter"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Counter App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "flutter_counter_app"

[[workflows.workflow]]
name = "Flutter Counter App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter pub get && flutter run -d web-server --web-port=5000 --web-hostname=0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "flutter_counter_app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter run -d web-server --web-hostname 0.0.0.0 --web-port 8080"

[deployment]
run = ["sh", "-c", "flutter pub get && flutter run -d web-server --web-port=5000 --web-hostname=0.0.0.0"]
